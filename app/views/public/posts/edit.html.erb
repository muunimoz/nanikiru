<div class="container-fluid">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h3 class="mt-4">投稿編集</h3>
    </div>
  </div>
  <div class="row py-5 mx-auto mt-4 shadow-lg w-50 d-flex align-items-center justify-content-center">
    <div class="col-10">
      <div class="row d-flex align-items-center justify-content-center">
        <%= form_with model: @post do |f| %>
          <div class="col-9 mt-4 d-flex align-items-center justify-content-center">
            <%= image_tag @post.get_image(400, 400) %>
          </div>
          <div class="col-9 mt-4 d-flex align-items-center justify-content-center">
            <h4 class="mt-3">説明</h4>
            <%= f.text_field :text %>
          </div>
          <div class="col-9 mt-4 d-flex align-items-center justify-content-center">
            <%= f.submit '更新', class: "btn btn-info mr-4" %>
            <%= link_to "削除", post_path, method: :delete, class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
      <div class="col-12 d-flex align-items-center justify-content-end">
        <%= link_to "BACK", post_path(@post.id) %>
      </div>
    </div>
  </div>
</div>

