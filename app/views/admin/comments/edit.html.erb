<div class="container-fluid">
  <div class="row mb-3">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h3 class="mt-4">コメント編集</h3>
    </div>
  </div>
  <div class="row align-content-center d-flex justify-content-center">
    <div class="col-12 col-md-6 shadow-lg p-5">
      <div class="row d-flex align-items-center justify-content-center">
        <%= form_with model: @comment, url:admin_comment_path do |f| %>
          <div class="col-12 mt-4 d-flex justify-content-start">
            <h4 class="mt-3">コメント</h4>
          </div>
          <div class="col-12 d-flex justify-content-center">
            <%= f.text_field :comment %>
          </div>
          <div class="col-12 mt-4 d-flex justify-content-center">
            <%= f.submit '更新', class: "btn btn-info mr-4" %>
            <%= link_to "削除", admin_comment_path(@comment.id), method: :delete, class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
      <div class="col-12 d-flex align-items-center justify-content-end mb-5">
        <%= link_to "BACK", admin_comments_path %>
      </div>
    </div>
  </div>
</div>