<div class="container-fluid">
  <div class="row mb-3">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h3 class="mt-4">コメント一覧</h3>
    </div>
  </div>
   <div class="row align-content-center d-flex justify-content-center">
    <div class="col-12 col-md-6 shadow-lg p-5">
      <div class="row d-flex align-items-center justify-content-center">
        <div class="col-10 d-flex justify-content-end px-0">
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>ユーザーネーム</th>
                <th>投稿画像</th>
                <th>コメント</th>
                <th>投稿日時</th>
              </tr>
            </thead>
            <tbody>
              <% @comments.each do |comment| %>
                <tr>
                  <td><%= comment.user.name %></td>
                  <td><%= image_tag comment.post.get_image(100, 100) %></td>
                  <td><%= link_to comment.comment, edit_admin_comment_path(comment.id) %></td>
                  <td><%= comment.created_at.in_time_zone('Asia/Tokyo').strftime('%Y/%m/%d/ %H:%M:%S') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-12 d-flex align-items-center justify-content-end">
        <%= link_to "BACK", admin_path %>
      </div>
    </div>
  </div>
</div>