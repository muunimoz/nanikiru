<div class="container-fluid">
  <div class="row mb-3">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h3 class="mt-4">ユーザー一覧</h3>
    </div>
  </div>
  <div class="row align-content-center d-flex justify-content-center">
    <div class="col-12 col-md-6 shadow-lg p-5">
      <div class="row d-flex align-items-center justify-content-center">
        <div class="col-11 d-flex justify-content-end px-0">
          <div class="table-responsive">
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th>プロフィール画像</th>
                  <th>ユーザーネーム</th>
                  <th>メールアドレス</th>
                  <th>状態</th>
                  <th>登録日時</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= image_tag user.get_profile_image(100, 100) %></td>
                    <td><%= link_to user.name, edit_admin_user_path(user.id) %></td>
                    <td><%= user.email %></td>
                    <td><%= user.is_active ? '有効' : '無効' %></td>
                    <td><%= user.created_at.in_time_zone('Asia/Tokyo').strftime('%Y/%m/%d/ %H:%M:%S') %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-12 d-flex align-items-center justify-content-end mt-5">
        <%= link_to admin_path do %>
          <i class="fa-regular fa-circle-left fa-2x"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>