<div class="container-fluid">
  <div class="row mb-3">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h3 class="mt-4">カテゴリー（気温）編集</h3>
    </div>
  </div>
  <div class="row align-content-center d-flex justify-content-center">
    <div class="col-12 col-md-6 shadow-lg">
      <div class="row d-flex align-items-center justify-content-center">
        <div class="align-content-center col-12 d-flex justify-content-center mt-4">
          <% if @temperature.errors.any? %>
            <%= @temperature.errors.count %>件のエラーが発生しました
            <ul>
              <% @temperature.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <%= form_with model: @temperature, url: admin_temperature_path do |f| %>
          <div class="col-12 mt-4 d-flex justify-content-start">
              <h4 class="mt-3">気温名</h4>
            </div>
            <div class="col-12 d-flex justify-content-center">
              <%= f.text_field :temperature_name %>
            </div>
            <div class="col-12 mt-4 d-flex justify-content-center">
              <%= f.submit '更新', class: "btn btn-info" %>
            </div>
          <% end %>
        </div>
        <div class="col-12 d-flex align-items-center justify-content-end mb-5">
          <%= link_to "BACK", admin_temperatures_path %>
        </div>
      </div>
    </div>
  </div>
</div>