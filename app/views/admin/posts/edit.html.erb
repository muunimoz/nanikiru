<div class="container-fluid">
  <div class="row mb-3">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h3 class="mt-4">投稿編集</h3>
    </div>
  </div>
  <div class="row align-content-center d-flex justify-content-center">
    <div class="col-12 col-md-6 shadow-lg p-5">
      <div class="row d-flex align-items-center justify-content-center">
        <%= form_with model: @post, url: admin_post_path, method: :patch do |f| %>
          <div class="col-12 mt-4 d-flex justify-content-center">
            <%= image_tag @post.get_image(200, 200) %>
          </div>
          <div class="col-12 mt-4 d-flex justify-content-start">
          　<h4 class="mt-3">説明</h4>
          </div>
          <div class="col-12 d-flex justify-content-center">
            <%= f.text_field :text %>
          </div>
          <div class="col-12 mt-4 d-flex justify-content-center">
            <%= f.submit '更新', class: "btn btn-info mr-4" %>
            <%= link_to "削除", admin_post_path(@post.id), method: :delete, class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
      <div class="col-12 d-flex align-items-center justify-content-end mt-5">
        <%= link_to admin_posts_path do %>
          <i class="fa-regular fa-circle-left fa-2x"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>